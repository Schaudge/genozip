{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "Build vczip",
            "command": "gcc.exe",
            "args": [
                //"-g", "-DDEBUG",
                "-Ofast", 
                "-Ibzlib", "-Izlib",
                "main.c", "vcffile.c", "zfile.c", "file.c", "vb.c", "zip.c", "gloptimize.c", "segregate.c",
                "piz.c", "vcf_header.c", "squeeze.c", "buffer.c", "profiler.c",
                "bzlib/blocksort.c", "bzlib/bzlib.c", "bzlib/compress.c", "bzlib/crctable.c",
                "bzlib/decompress.c", "bzlib/huffman.c", "bzlib/randtable.c",
                "zlib/gzlib.c", "zlib/gzread.c", "zlib/inflate.c", "zlib/inffast.c", "zlib/inftrees.c",
                "zlib/crc32.c", "zlib/adler32.c", "zlib/zutil.c", 
                "-o", "vczip.exe"
            ],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "presentation": {
                "clear": true
            }
        },
        {
            "type": "shell",
            "label": "Hard link vcpiz and vccat",
            "command": "${workspaceRoot}/mklink.bat",
//            "args": [ "${workspaceRoot}" ]

            "options": {
                "cwd": "${workspaceRoot}"
            },
            "group": {
                "kind": "build",
                "isDefault": false
            },
            "presentation": {
                "clear": true
            }
        }        
    ]
}